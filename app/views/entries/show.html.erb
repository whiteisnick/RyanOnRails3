<h4 id="entry-name"><%= @entry.name %></h4>
<div class="row">
  <div class="col-xs-6 col-xs-offset-3">
    <%= image_tag(@entry.image_url, :class => 'img-responsive')  %>
  </div>
  <div class="col-xs-6 col-xs-offset-3">
    <div class="row">
      <div class="col-xs-6">
        <ul class="nav nav-pills nav-justified">
          <% if @entry.previous %>
            <li><%= link_to 'Previous', @entry.previous %></li>
          <% end %>
          <% if @entry.next %>
            <li><%= link_to 'Next', @entry.next %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>
