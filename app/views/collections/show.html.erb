<div class="row">
  <h2 id="collection-name"><%= @collection.name %></h2>
  <div class="col-xs-2">
    <p><%= @collection.description %></p>
    <% if user_signed_in? %>
      <p><%= link_to "Edit Collection", edit_collection_path(@collection) %></p>
      <p><%= link_to "New Entry", new_collection_entry_path(@collection) %></p>
    <% end %>
  </div>
  <div class="col-xs-10">
    <div class="row">
      <% @entries.each do |entry| %>
        <div class="col-xs-3">
          <div class="feature">
            <div class="row">
              <div class="col-xs-10 col-xs-offset-1">
                <%= link_to image_tag(entry.image_url, :class => 'img-responsive img-rounded'), collection_entry_path(@collection, entry) %>
              </div>
              <div class="col-xs-12">
                <h4><%= entry.name %></h4>
                <% if user_signed_in? %>
                  <p><%= link_to 'Delete', entry, method: :delete, data: { confirm: 'Are you sure?' } %></p>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
