<div class="row">
  <h2 id="collection-name"><%= @collection.name %></h2>
  <div class="col-xs-2">
    <p><%= @collection.description %>
  </div>
  <div class="row">
    <% @entries.each do |entry| %>
      <div class="col-xs-3">
        <div class="feature">
          <div class="row">
            <div class="col-xs-10 col-xs-offset-1">
              <%= link_to image_tag(entry.image_url, :class => 'img-responsive img-rounded'), entry %>
            </div>
            <div class="col-xs-12">
              <h4><%= entry.name %></h4>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
