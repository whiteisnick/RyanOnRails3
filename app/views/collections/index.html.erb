<div class="row">
  <% @collections.each do |collection| %>
    <div class="col-xs-6">
      <div class="feature">
        <div class="row">
          <div class="col-xs-10 col-xs-offset-1">
            <%= link_to image_tag(collection.image_url, :class => 'img-responsive img-rounded'), collection %>
          </div>
          <div class="col-xs-12">
            <h4><%= collection.name %></h4>
            <% if user_signed_in? %>
              <p><%= link_to 'Delete', collection, method: :delete, data: { confirm: 'Are you sure?' } %></p>
            <% end %>
          </div> <!-- /col -->
        </div> <!-- /row -->
      </div> <!-- /feature -->
    </div> <!-- /col -->
  <% end %>
</div>
